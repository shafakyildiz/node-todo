<!-- views/index.ejs -->
<html>
  <head>
    <title>To-Do App</title>
  </head>
  <body>
    <h1>To-Do List</h1>
    <ul>
      <% todos.forEach(todo => { %>
      <li><%= todo %></li>
      <% }); %>
    </ul>
    <form action="/add" method="post">
      <input type="text" name="newTodo" placeholder="Add a new to-do item" />
      <button type="submit">Add</button>
    </form>
  </body>
</html>
